<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="2dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <Button

        android:onClick="sortByRatings"
        android:background="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Ratings"
        android:id="@+id/sort_rating_bottom_sheet_view_id"
        />
    <Button
        android:onClick="sortByPrice"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by Item Price"
        android:id="@+id/sort_price_bottom_sheet_view_id"
        />


 </LinearLayout>